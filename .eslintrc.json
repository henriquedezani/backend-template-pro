{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "@typescript-eslint/camelcase": "off",
    "no-useless-constructor": "off",
    "no-empty-function": "off",
    "@typescript-eslint/no-unused-vars": [ "error", {
      "argIgnorePattern": "_"
    }],
    "semi": "off",
    // "no-unused-vars": "off",
    "import/extensions" : [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }]
    },
    "settings" : {
      "import/resolver": {
        "typescript" : {}
      }
    }
  }
